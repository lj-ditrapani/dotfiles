input type:keyboard {
    xkb_layout us
    xkb_options caps:escape
}

set $mod Mod4

set $left o
set $down e
set $up period
set $right u

set $term kitty --single-instance

# Use Mouse to drag floating windows to their wanted position
floating_modifier $mod normal

# start a terminal
bindsym $mod+Return exec $term
# kill focused window
bindsym $mod+q kill
# start a program launcher
bindsym $mod+r exec wofi --show run
# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+d layout default

# Switch to workspace
bindsym $mod+apostrophe workspace number 1
bindsym $mod+comma workspace number 2
bindsym $mod+p workspace number 3
bindsym $mod+y workspace number 4
bindsym $mod+f workspace number 5
bindsym $mod+g workspace number 6
bindsym $mod+c workspace number 7
bindsym $mod+l workspace number 8

mode "swaymode" {
    # Move the focused window with the same, but add Shift
    bindsym Shift+$left move left
    bindsym Shift+$down move down
    bindsym Shift+$up move up
    bindsym Shift+$right move right
    # Ditto, with arrow keys
    bindsym Shift+Left move left
    bindsym Shift+Down move down
    bindsym Shift+Up move up
    bindsym Shift+Right move right

    # split in horizontal orientation
    bindsym z split h
    # split in vertical orientation
    bindsym v split v

    # Toggle the current focus between tiling and floating mode
    bindsym Shift+space floating toggle
    # change focus between tiling / floating windows
    bindsym space focus mode_toggle

    # Move focused container to workspace
    bindsym Shift+apostrophe move container to workspace number 1
    bindsym Shift+comma move container to workspace number 2
    bindsym Shift+p move container to workspace number 3
    bindsym Shift+y move container to workspace number 4
    bindsym Shift+f move container to workspace number 5
    bindsym Shift+g move container to workspace number 6
    bindsym Shift+c move container to workspace number 7
    bindsym Shift+l move container to workspace number 8

    # Reload the configuration file
    # bindsym Shift+X reload
    # restart sway inplace (preserves your layout/session, can be used to upgrade sway)
    # bindsym Shift+W restart

    bindsym Escape mode "default"
}

bindsym $mod+a mode "swaymode"

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position bottom

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%Y-%m-%d %I:%M %p'; do sleep 1; done

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

include /etc/sway/config.d/*

font pango:Terminus 8
