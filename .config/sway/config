input type:keyboard {
    xkb_layout us
    xkb_options caps:escape
}

set $mod Mod4

# Use Mouse to drag floating windows to their wanted position
floating_modifier $mod normal

# start a terminal
set $term kitty --single-instance
bindsym $mod+Return exec $term
# kill focused window
bindsym $mod+q kill
# start a program launcher
bindsym $mod+r exec wofi --show run

# Move your focus around
bindsym $mod+i focus left
bindsym $mod+a focus down
bindsym $mod+u focus up
bindsym $mod+n focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+i move left
bindsym $mod+Shift+a move down
bindsym $mod+Shift+u move up
bindsym $mod+Shift+n move right

# split in vertical orientation
bindsym $mod+v split v
# split in horizontal orientation
bindsym $mod+z split h

# change container layout (stacked, tabbed, default)
bindsym $mod+w layout stacking
bindsym $mod+d layout default

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Switch to workspace
bindsym $mod+h workspace number 1
bindsym $mod+t workspace number 2
bindsym $mod+s workspace number 3
bindsym $mod+f workspace number 4
bindsym $mod+c workspace number 5
bindsym $mod+g workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8

# Move focused container to workspace
bindsym $mod+Shift+h move container to workspace number 1
bindsym $mod+Shift+t move container to workspace number 2
bindsym $mod+Shift+s move container to workspace number 3
bindsym $mod+Shift+f move container to workspace number 4
bindsym $mod+Shift+c move container to workspace number 5
bindsym $mod+Shift+g move container to workspace number 6
bindsym $mod+ampersand move container to workspace number 7
bindsym $mod+asterisk move container to workspace number 8

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position bottom

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%Y-%m-%d %I:%M %p'; do sleep 1; done

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

include /etc/sway/config.d/*

font pango:Terminus 8
